<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#0168AD">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="v21 Washing"
        android:textColor="#ffff"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/group_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#EDE7E7"
        app:strokeColor="#000"
        app:strokeWidth="2dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/otp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:backgroundTint="#EDE7E7"
                android:padding="15dp"
                android:text="Continue With Phone Number"
                android:textColor="#000"
                android:textSize="10sp"
                app:cornerRadius="20dp"
                app:icon="@drawable/group_10"
                app:iconPadding="10dp"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.179"
                app:rippleColor="#0168AD"
                app:strokeColor="#000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gsi"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#EDE7E7"
                android:text="Continue With Google"
                android:textColor="#000"
                android:textSize="10sp"
                app:cornerRadius="20dp"
                app:icon="@drawable/g1200px_google__g__logo_svg"
                app:iconTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/otp"
                app:rippleColor="#0168AD"
                app:strokeColor="#000" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

